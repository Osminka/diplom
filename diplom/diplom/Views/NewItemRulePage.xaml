<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="diplom.Views.NewItemRulePage"
             Shell.PresentationMode="ModalAnimated"
             Title="New Item"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true">


    <ContentPage.Content>
        <StackLayout Spacing="3" Padding="15" BackgroundColor="#f0f0f0">
            <Label Text="Назва:" FontSize="Medium" TextColor="Black"/>
            <Entry Text="{Binding Name, Mode=TwoWay}" Placeholder="Калі ласка, увядзіце назву" FontSize="Medium" />
            <Label Text="Тэкст:" FontSize="Medium" TextColor="Black"/>
            <Editor Text="{Binding Text, Mode=TwoWay}" Placeholder="Калі ласка, увядзіце тэкст" AutoSize="TextChanges" FontSize="Medium" Margin="0" />
            <StackLayout Orientation="Horizontal" Margin="0,10">
                <Button Text="Назад" Command="{Binding CancelCommand}" HorizontalOptions="FillAndExpand" BackgroundColor="#bf3f3d"></Button>
                <Button x:Name="butt6" Text="Дадаць" Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand" BackgroundColor="#bf3f3d" PropertyChanged="Button_PropertyChanged"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
