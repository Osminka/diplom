<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="diplom.Views.TestsPage">
    <ContentPage.Content >
        <StackLayout  BackgroundColor="#f0f0f0" >
            <StackLayout Margin="20,20,20,20">
                <Image x:Name="img"  HorizontalOptions="Center" HeightRequest="250" WidthRequest="250"/>
                <Label x:Name="lbl" HorizontalOptions="Center" FontSize="30" FontAttributes="Bold" TextColor="Black"></Label>
                <StackLayout Orientation="Vertical" BackgroundColor="WhiteSmoke" Margin="0,40" Spacing="10" >
                    <RadioButton x:Name="rad1"    TextColor="black" FontSize="22" Margin="0,10,0,6" HeightRequest="60"  BackgroundColor="WhiteSmoke" />
                    <RadioButton x:Name="rad2"  TextColor="black" FontSize="22" Margin="0,10,0,6" HeightRequest="60"  BackgroundColor="WhiteSmoke" />
                    <RadioButton x:Name="rad3"  TextColor="black" FontSize="22" Margin="0,10,0,6" HeightRequest="60"  BackgroundColor="WhiteSmoke" />
                </StackLayout>
                <Button x:Name="butt" Text="Праверыць" HorizontalOptions="CenterAndExpand" BackgroundColor="#bf3f3d" TextColor="White" WidthRequest="250" Clicked="Button_Clicked"/>
            </StackLayout>
           
        </StackLayout>
    </ContentPage.Content>
</ContentPage>